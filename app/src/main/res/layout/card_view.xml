<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardPreventCornerOverlap="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.joooonho.SelectableRoundedImageView
                android:id="@+id/poster"
                android:layout_width="match_parent"
                android:layout_height="162dp"
                android:background="@color/black54"
                android:scaleType="centerCrop"
                card_view:sriv_border_color="@color/white"
                card_view:sriv_border_width="0dp"
                card_view:sriv_left_bottom_corner_radius="0dp"
                card_view:sriv_left_top_corner_radius="4dp"
                card_view:sriv_right_bottom_corner_radius="0dp"
                card_view:sriv_right_top_corner_radius="4dp" />


            <TextView
                android:id="@+id/titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="24dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/detalhes"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />
        </FrameLayout>

        <TextView
            android:id="@+id/descricao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:ellipsize="end"
            android:maxEms="120"
            android:maxLines="2"
            android:textColor="@color/gray"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black12"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="@string/detalhes"
                android:textColor="@color/pink"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/btShare"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_margin="16dp"
                android:alpha="0.54"
                android:background="@mipmap/ic_share_black_18dp" />
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>